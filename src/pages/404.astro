import BaseLayout from '../layouts/BaseLayout.astro';
import siteConfig from '../data/site-config';
import Button from '../components/Button.astro';

const { '404': unmatchedPath } = Astro.params;
---

<BaseLayout description="Page not found" image={siteConfig.image}>
    <div class="flex flex-col items-center justify-center text-left sm:flex-row sm:text-left">
        <!-- Left Section: Image -->
        <div class="flex-1 flex items-center justify-center">
            <img src="/images/Anunnaki.svg" alt="Anunnaki illustration" />
        </div>

        <!-- Right Section: Text -->
        <div class="flex-1 flex flex-col items-center sm:items-start">
            <h2 class="mb-12 text-3xl font-serif italic sm:text-3xl">404: Stray Pages</h2>
            <p class="mb-8 text-lg text-muted">The page you're looking for is not here.</p>
            <Button href="/">Go Home</Button>
        </div>
    </div>
</BaseLayout>
