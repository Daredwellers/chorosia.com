---
// filepath: src/pages/thank-you.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import siteConfig from '../data/site-config';
---

<BaseLayout
    description="Subscribed Successfully"
    image={siteConfig.image}
    title="Welcome Aboard"
    description="Thanks for subscribing!"
    image={{ src: '/images/welcome.svg', alt: 'The preview of the site' }}
    showHeader={false}
>
    <div class="flex flex-col items-center justify-center text-left sm:flex-row sm:text-left">
        <!-- Left Section: Image -->
        <div class="flex-1 flex items-center justify-center">
            <img src="/images/welcome.svg" alt="Welcome illustration" class="w-2/3 sm:w-full pr-4" />
        </div>

        <!-- Right Section: Text -->
        <div class="flex-1 flex flex-col items-center sm:items-start">
            <h2 class="mb-12 text-3xl font-serif italic sm:text-3xl">Welcome, child!</h2>
            <p class="mb-8 text-lg text-muted">Thanks for subscribing to our newsletter! <br /> We promise to keep it low profile.</p>
            <Button href="/">Back Home</Button>
        </div>
    </div>
</BaseLayout>
