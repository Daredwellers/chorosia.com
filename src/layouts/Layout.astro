const { title } = Astro.props; // Get the title prop
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title || "Chorosia"}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		width: 100%;
		height: 100%;
		background-color: #7D6F45;
		position: relative;
		.black-text {
      color: black;
	  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
    }
   		.white-text {
      color: white;
	  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
    }
		.logo-container {
 	 display: flex;
 	 justify-content: center;
  	 align-items: center;
 	 height: 100vh; /* Full viewport height */
}
		.logo {
  	max-width: 50%; /* Scale to xx% of the container width */
  	height: auto;
}

}

</style>
